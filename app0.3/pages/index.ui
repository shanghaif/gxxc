<script>
import mixin from '#/static/ajax/mixin'
export default {
  config: {
    navigationStyle: 'custom',
    navigationBarBackgroundColor:"#26a2ff",
    navigationBarTitleText: "首页",
    navigationBarTextStyle:"white",
    title:'首页',
    backgroundColor:'#f2f2f2',
    delay:false,//延迟加载
  },
  mixins:[mixin],
  data () {
    return {
      usermess:'',
      zhYE: {
        yhZhye: 0
      },
      tabsIndex:0,

      popupshow:false,
      checklist:['43'],
      foodList:[
        {key: '430014', value: '江岸区'},
        {key: '4300001', value: '江汉区'},
        {key: '4300002', value: '硚口区'},
        {key: '430050', value: '汉阳区'},
        {key: '4300003', value: '武昌区'},
        {key: '430080', value: '青山区'},
        {key: '430070', value: '洪山区'},
        {key: '430040', value: '东西湖区'},
        {key: '430090', value: '汉南区'},
        {key: '430100', value: '蔡甸区'},
        {key: '430200', value: '黄陂区'},
        {key: '431400', value: '新洲区'},
        {key: '43', value: '武汉市'}
      ],
      
      pullUp:{
        distance: 50,
        onBegin: () => {},
        onActive: this.handleLoadMore,
        onAfter: this.handlePullUpAfter
      },

      height: ui.DEFAULT_CONTENT_HEIGHT,
      items:[{}],
      autoplay: {
        delay: 2.5*1000
      },

      itemlist: [],
      count:0,
      loadMore:true,
      offsetTop: ui.DEFAULT_HEADER_HEIGHT,
      customStyle:{
        'background-color':'#fff',
      }
    }
  },
  methods: {
    getYE(callback) {//获取账户余额
      var v = this
      this.$http('POST',ui.getApp().apis.USERZH,{},(res)=>{
          if(res.code==200){
            v.zhYE.yhZhye = res.result.yhZhye
            callback && callback(true)
          }else{
            ui.showToast({ title:res.message})
          }
      })
    },
    handleLoadMore () {
      ui.showToast({
          title: '上拉'
        })
      this.count ++
      if(this.count > 10){
        this.loadMore = false
        return false
      }else{
        window.setTimeout(() => {
          for (let i = this.bottom + 1; i <= this.bottom + 10; i++) {
            this.items.push(`列表项目${i}`)
          }
          this.bottom += 10
        }, 1500)
      }
    },
    handlePullUpAfter (flag) {
      ui.showToast({
          title: flag
        })
      if (flag) {
        ui.showToast({
          title: '处理上拉刷新'
        })
      }
    },
    handleChange (index, key) {//tan选项卡
    },
    change(val){//check-list 单选 数据返回
      console.log(val);
      console.log(this.checklist);
      this.popupshow = false
      this.getGpsCode()
      // this.XLC()
    },
    showPopup(){
      this.tabsIndex = 1;
      this.popupshow = true
    },
    goMyTeam(){
      ui.navigateTo({
        url: 'center/myTeam2'
      })
    },
    goBill(){
      ui.navigateTo(
        {
          url:'center/bill2'
        }
      )
    },
    qrcode(){
      if(this.usermess.ddSfjx!='1'){
          ui.showToast({ title: '请先缴费' })
          return
      }
      ui.getApp().QRpage = '/pages/index'
      ui.navigateTo(
        {
          url:'/pages/common/qrCode'
        }
      )
    },
    goXlc(item){
      ui.getApp().xlcMess = item
      ui.navigateTo(
        {
          url:'home/xlcMess'
        }
      )
    },
    getSwiperImg(){//获取轮播图片
      this.$http('POST',ui.getApp().apis.SWIPER,{hdSxs:0},(res)=>{
            if(res.code==200){
              this.items = res.page.list
            }
      })
    },
    getGpsCode(){
      ui.getApp().wxUtil.getMapCode((res)=>{
          this.XLC(res)
      })
    },
    XLC(res){
      var v = this
      let gpsMess = ''
      if(res){
        if(res.latitude&&res.longitude){
          gpsMess=res.latitude+','+res.longitude
        }
      }
      this.$http('POST',ui.getApp().apis.XLC,{gps:gpsMess,inputRegionCode:v.checklist[0]},(res)=>{
          if(res.code==200){
            this.itemlist = res.page.list
          }
      })
    }
  },
  created () {
    var v = this
    this.getYE()
    this.getUserMess((res)=>{
      this.usermess = res
    })
    this.getSwiperImg()
    if(localStorage.getItem("projectType") == 'true'){
      v.getGpsCode()
    }else{
      v.XLC()
    }
  },
  mounted() {
  }
}

</script>

